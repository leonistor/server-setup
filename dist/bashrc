# history
HISTSIZE=10000
HISTFILESIZE=2000000
shopt -s histappend
HISTCONTROL=ignoreboth
HISTIGNORE='ls:ll:ls -alh:pwd:clear:history:d:..'
shopt -s cmdhist

# aliases
# shellcheck disable=SC1090
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# editor
export EDITOR=vim

# PATH
export PATH="$PATH:$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin"
